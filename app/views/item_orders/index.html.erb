<h1>Listing item_orders</h1>

<table>
  <thead>
    <tr>
      <th>Serial</th>
      <th>Cart</th>
      <th>Item</th>
      <th>Size</th>
      <th>Color</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @item_orders.each do |item_order| %>
      <tr>
        <td><%= item_order.serial %></td>
        <td><%= item_order.cart_id %></td>
        <td><%= item_order.item_id %></td>
        <td><%= item_order.size %></td>
        <td><%= item_order.color %></td>
        <td><%= link_to 'Show', item_order %></td>
        <td><%= link_to 'Edit', edit_item_order_path(item_order) %></td>
        <td><%= link_to 'Destroy', item_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

